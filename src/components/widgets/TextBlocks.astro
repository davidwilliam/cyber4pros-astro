---
// components/widgets/TextBlocks.astro
export interface TextBlock {
  title?: string;
  body: string;
}

export interface TextBlocksProps {
  blocks?: TextBlock[];
}

const { blocks = [] } = Astro.props as TextBlocksProps;
---

<section class="max-w-3xl mx-auto px-4 sm:px-6 py-8 space-y-6 text-gray-700 dark:text-gray-300">
  {blocks.map(({ title, body }, index) => (
    <div>
      {title && <h2 class="text-2xl font-bold dark:text-white">{title}</h2>}
      <p>{body}</p>
    </div>
  ))}
</section>
