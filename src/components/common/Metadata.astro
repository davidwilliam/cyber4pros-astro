---
export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const {
  title = 'Cyber4Pros',
  description = 'Cybersecurity compliance made simple with AI.',
  canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined,
  noindex = false,
  nofollow = false,
} = Astro.props;

const robotsContent = [
  noindex ? 'noindex' : 'index',
  nofollow ? 'nofollow' : 'follow'
].join(',');
---

<title>{title}</title>
<meta name="description" content={description} />
{canonical && <link rel="canonical" href={canonical} />}
<meta name="robots" content={robotsContent} />

<!-- Optional: Add basic OpenGraph for social previews -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{canonical && <meta property="og:url" content={canonical} />}
<meta property="og:type" content="website" />
<meta property="og:site_name" content="Cyber4Pros" />

<!-- Optional: Add basic Twitter card -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
